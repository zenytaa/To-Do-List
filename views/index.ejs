<%- include('partials/header.ejs') %>

  <!-- CONTENT -->

  <!-- Task List -->
  <div class="container pt-3 ">
    <div class="row">
      <div class="col">
        <table class="table">
          <thead>
            <tr class="">
              <th scope="col">#</th>
              <th scope="col">Task</th>
              <th scope="col">Due To</th>
              <th scope="col">Edit</th>
            </tr>
          </thead>
          <tbody>
            <% if (locals.tasksList) { %>
              <% tasksList.forEach((t, i)=> { i++ %>
                <tr>
                  <th scope="row">
                    <%= i++ %>
                  </th>
                  <td class="">
                    <%= t.task %>
                  </td>
                  <td class="">
                    <%= t.dueTo %>
                  </td>
                  <td class="text-end">
                    <button id="checklist-btn" type="button" class="btn btn-success rounded-pill">
                      <i class="bi bi-check-circle"></i>
                    </button>
                    <a href="/edit/<%=t.task %>" id="edit-btn" type="submit" class="edit-btn btn btn-info rounded-pill"
                      data-bs-toggle="modal" data-bs-target="#edit-modal-<%=i%>">
                      <i class="bi bi-pencil-square"></i>
                    </a>
                    <a href="/delete/<%= t.task %>" id="delete-btn" type="button" class="btn btn-danger rounded-pill">
                      <i class="bi bi-trash"></i>
                    </a>
                  </td>
                </tr>
                <% }) %>
                  <% } else {%>
                    <tr>
                      <td>hahaha</td>
                    </tr>
                    <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Modal -->

  <!-- End Of Task List -->

  <%- include('./edit-task.ejs') %>
    <!-- END OF CONTENT -->
    <%- include('partials/footer.ejs') %>